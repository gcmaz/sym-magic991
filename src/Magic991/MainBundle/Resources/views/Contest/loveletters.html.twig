{% extends 'Magic991MainBundle::layout.html.twig' %}

{% block title %}
    Love Letters with Leza
{% endblock %}

{% block description %}
    <meta name="description" content="Submit your letter to Love Letters with Leza on Magic 99.1"/>
    <meta property="og:site_name" content="http://magic991.gcmaz.com" />
    <meta property="fb:admins" content="100003228578475" />
    <meta property="fb:app_id" content="388413197938552" />
    <meta property="og:type" content="music.radio_station" />
    <meta property="og:image" content="http://magic991.gcmaz.com{{ asset('images/660x250/love-letters-leza.jpg') }}"/>
    <meta property="og:url" content="http://magic991.gcmaz.com{{ path('Magic991_contest', {'contest': 'love-letters-with-leza'}) }}"/>
    <meta property="og:title" content="Love Letters with Leza"/> 
    <meta property="og:description" content="Submit your letter to Love Letters with Leza on Magic 99.1"/>
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="love letter, Leza, love letters with leza"/>
{% endblock %}
    
{% block styles %}
    {{ parent() }}
    <style type="text/css">
        form.letter { font-size: 10px;color:#f6ad40; margin:10px 0; width:450px; text-align:left;}
        form.letter label { float: left; text-align: right; width: 100px; font-weight: 700; vertical-align: top; padding:10px 5px 0 0; color:#f1a5c0; font-size:1.3em;}
        form.letter input[type="text"],
        form.letter input[type="email"]
            { width: 300px; line-height: 1.5; font-size: 1.2em; min-height: 1.5; margin:4px 0;}
        form.letter textarea { width: 300px; height: 200px; line-height: 1.5; font-size: 1.2em; margin:4px 0;}
        form.letter input[type="submit"] { width: 300px; line-height: 1.5; font-size: 1.2em; min-height: 1.5; margin-left:110px;}
        .loveletters{background-color:#94090e;padding:0;width:660px;margin:0 auto;line-height:1.3;}
        .loveletters a, .loveletters span{text-decoration:none;font-weight:700;color:#ff96b9;}
        .loveletters p{text-shadow:1px 1px 1px rgba(0,0,0,.3);}
    </style>
{% endblock %}

{% block content %}
    {% if status == 'live' %}
    <div style="background-color:#000;width:660px;margin:0 auto;padding:0;">
            <div class="fb-like" data-href="http://magic991.gcmaz.com{{ path('Magic991_contest', {'contest': 'love-letters-with-leza'}) }}" colorscheme="dark" data-send="true" data-width="640" data-show-faces="true" data-font="arial" style="margin:3px 5%;padding:0;"></div>
            {% for flashMessage in app.session.flashbag.get('letternotice') %}
                <div class="notice" style="background-color:#c00;">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <br class="clear"/>
    </div>
    <div class="arial loveletters">
        <img src="{{asset("images/660x250/love-letters-leza.jpg")}}" width="660" height="250" alt="Love Letters with Leza"/>
        <p style="color:#fff;text-align:left;width:90%;margin:5px auto;">
            Submit your Love Letter to be ready on the air the week of Valentine's Day!  If <span class="bold">Leza reads your letter on the air</span>, you will win a free <span class="bold">Heart Shaped Pizza</span> from <a href="http://www.papajohns.com" target="_blank">Papa John's</a> and will be a finalist for the grand prize below.
        </p>
        <p style="color:#fff;text-align:left;width:90%;margin:5px auto;">
            All finalists letters <span class="bold">will be posted on <a href="https://www.facebook.com/LezaLiveandLocal" target="_blank" style="font-size:1.4em;">Leza's facebook page</a></span>, where fans can <span class="bold">vote for their favorite letter</span>.  The letter with the most votes (likes) will win.
        </p>
        <p style="color:#fff;text-align:left;width:90%;margin:5px auto;">
            Leza will arrange to have the <span class="bold">winner read their love letter on the air on Valentine's Day to the person they wrote it to!</span>  Winner will also receive a <span class="bold">dozen roses</span> from <a href="http://www.prescottflowershopaz.com" target="_blank">Prescott Flower Shop</a> and a <span class="bold">massage</span> from <a href="https://www.facebook.com/MassageEnvyPrescott" target="_blank">Massage Eny Prescott</a>.
        </p>
        <div style="float:right;width:200px;height:400px;padding-top:30px;">
            <a href="https://www.facebook.com/MassageEnvyPrescott" target="_blank">
                <img src="{{asset('images/sponsors/massage-envy.jpg')}}" width="150" height="auto" alt="Massage Envy Prescott" style="padding:10px 0;"/>
            </a>
            <a href="http://www.prescottflowershopaz.com/" target="_blank">
                <img src="{{asset('images/sponsors/prescott-flower-shop.jpg')}}" width="100" height="auto" alt="Prescott Flower Shop" style="padding:10px 0;"/>
            </a>
            <a href="http://www.papajohns.com" target="_blank">
                <img src="{{asset('images/sponsors/papa-johns.jpg')}}" width="150" height="auto" alt="Papa Johns Prescott" style="padding:10px 0;"/>
            </a>
        </div>
        <form action="{{ path('Magic991_contest', {'contest': 'love-letters-with-leza'}) }}" method="post" {{ form_enctype(form) }} class="letter">
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.recipient) }}
            <div>
            {{ form_label(form.loveletter, 'Your Letter') }}
            {{ form_errors(form.loveletter) }}
            {{ form_widget(form.loveletter) }}
            </div>
            {{ form_rest(form) }}
            <input type="submit" value="Submit" />
        </form>
        <br class="clear"/>
    </div>
    
    {% elseif status == 'dead' %}
        <h1>Sorry, this contest is not active right now</h1>
    {% endif %}
        
{% endblock %}